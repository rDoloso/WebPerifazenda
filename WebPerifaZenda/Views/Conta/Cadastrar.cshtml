@{
    ViewData["Title"] = "Cadastrar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - PerifaZenda</title>

    <!-- Vincula o arquivo CSS -->
    <link rel="stylesheet" href="~/css/cadastrar.css" />
</head>
<body>

    <div class="container">
        <div class="form-container">
            <form method="post" action="/Cadastro/Cadastrar">
                <label for="nome">Nome completo:</label>
                <input type="text" id="nome" name="nome" required>

                <label for="cpf">CPF:</label>
                <input type="text" id="cpf" name="cpf" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" required>

                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" required>

                <label for="confirmacao">Confirmação de Senha:</label>
                <input type="password" id="confirmacao" name="confirmacao" required>

                <label for="data-nascimento">Data de Nascimento:</label>
                <input type="date" id="data-nascimento" name="data-nascimento" required>
            </form>
        </div>
    </div>

    <div class="cadastrar">
        <img src="~/imagens/fazendeiroComCirculo.png" alt="Fazendeiro com um circulo em volta." class="fazendeiro">
        <button type="submit">Cadastrar</button>
    </div>

</body>
</html>
